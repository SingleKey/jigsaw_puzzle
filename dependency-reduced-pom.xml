<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.i7606.jigsaw_puzzle</groupId>
  <artifactId>jigsaw_puzzle</artifactId>
  <version>0.1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>${javafx.plugin.version}</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.gluonhq</groupId>
        <artifactId>gluonfx-maven-plugin</artifactId>
        <version>${gluonfx.plugin.version}</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
          <enableSWRendering>true</enableSWRendering>
          <resourcesList>
            <list>.*.png$</list>
            <list>.*.css$</list>
            <list>.*.json$</list>
            <list>.*.gif$</list>
          </resourcesList>
          <attachList>
            <list>display</list>
            <list>lifecycle</list>
            <list>statusbar</list>
            <list>storage</list>
          </attachList>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.i7606.jigsaw_puzzle.AppStater</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
    <charm.version>6.2.2</charm.version>
    <attach.version>4.0.16</attach.version>
    <maven.compiler.target>17</maven.compiler.target>
    <main.class>org.i7606.jigsaw_puzzle.AppStater</main.class>
    <maven.compiler.source>17</maven.compiler.source>
    <gluonfx.plugin.version>1.0.16</gluonfx.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.plugin.version>0.0.8</javafx.plugin.version>
  </properties>
</project>
